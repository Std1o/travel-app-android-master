<resources>
    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:textColor">@color/black_opacity_87</item>
    </style>

    <style name="TextAppearance.Subheading3">
        <item name="android:textSize">@dimen/text_size_subheading</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black_opacity_87</item>
    </style>

    <style name="TextAppearance.Subheading2">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/black_opacity_87</item>
    </style>

    <style name="TextAppearance.Inverse.Subheading2">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/black_opacity_87</item>
    </style>

    <style name="TextAppearance.Body2">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/black_opacity_54</item>
    </style>

</resources>
